<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link href="https://fonts.googleapis.com/css?family=Lobster|Roboto" rel="stylesheet">

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>

  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <div class="loginForm toggleHidden">
    <h1>login</h1>
    <br>
    <form id="loginFormBody" method="POST" action="/api/login">
      email
      <input name="email" type="email" class="email" value="rob@example.com">
      <br> password
      <input name="password" type="password" class="password" value="1234">
      <br>
      <input type="submit" value="login" class="loginButton">
    </form>
  </div>

  <div class="main">
    <div class="header">
      <img src="../images/bomb.svg" alt="">
      <ul class='nav'>
        <% if(user_id !== undefined){ %>
          <li id="useremail"> <%= user_id.email %> </li>
          <li  data-user-id="<%= user_id.id %>" id="myDocs">My Docs</li>
          <li id="navLogoutButton">logout</li>
         <% } else { %>
        <li id="navLoginButton">Login </li>
        <li>Register</li>
      <% } %>
      </ul>
    </div>

    <div class='container'>
      <div class="search">
        <form id='search' action="/">
          <select class='searchTopic'>
          <option value="alldocs">alldocs</option>
          <option value="2">html/css</option>
          <option value="3">Ruby</option>
          <option value="4">ajax</option>
          <option value="5">sql</option>
          <option value="6">java</option>
          <option value="7">c#</option>
          <option value="8">Python</option>
        </select>
          <input type="text" class="searchTerm" placeholder="What are you looking for?">
          <button type="submit" class="searchButton">GO</button>
        </form>
      </div>
    </div>

    <div class="footer-tab">
      <div class="footer">
        <a class='add-resource'>
          <h1>Add Resource</h1>
        </a>
      </div>
  <div class="add-box">
    <form class='add-url'>
      <div class='add-title-caption'>Title</div>

      <div id="addResTitleBox">
        <select class='selectTopic' placeholder='category'>
            <option value="1">topic...</option>
            <option value="2">html/css</option>
            <option value="3">Ruby</option>
            <option value="4">ajax</option>
            <option value="5">sql</option>
            <option value="6">java</option>
            <option value="7">c#</option>
            <option value="8">Python</option>
          </select>
        <input type="text" name='title' class="add-url-field" id='title' placeholder="">
      </div>
      <div class='add-desc-caption'>Description</div>

          <input type="text" name='description' class="add-url-field" id='desc' placeholder='add a description'>

          <div class='add-url-caption'>url</div>

          <input type="text" name='url' class="add-url-field" id='url' placeholder='http://'>

          <input type="submit" value="add" class="addButton">
        </form>
      </div>
    </div>
  </div>
</body>

</html>
